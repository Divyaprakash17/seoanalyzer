{
  "version": 2,
  "builds": [
    { "src": "server/server.js", "use": "@vercel/node" },
    { "src": "client/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/server.js" },
    { "src": "/(.*)", "dest": "/client/index.html" },
    { "src": "/assets/(.*)", "dest": "/client/assets/$1" },
    { "src": "/@vite/(.*)", "status": 404 },
    { "src": "/node_modules/(.*)", "status": 404 },
    { "src": "/(.*)", "dest": "/client/index.html" }
  ]
}
